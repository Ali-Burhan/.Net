@model IEnumerable<ERP_App.Models.AccountActivityMV>

@{
    ViewBag.Title = "Account Activities";
}

<h2>Account Activities</h2>

<p>
</p>
<!-- DATATABLE DEMO 2-->
<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        @Html.ActionLink("New Account Activity", "CreateAccountActivity", null, new { @class = "btn btn-success" })
        <hr />
        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        Account Activity
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditAccountActivity", new { accountactivityid = item.AccountActivityID}, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
