@model IEnumerable<ERP_App.Models.AccountControlMV>

@{
    ViewBag.Title = "Account Control";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Account Control</div>

    </div>
    <div class="card-body">
        <div>@Html.ActionLink("New Control", "CreateAccountControl", null, new { @class = "btn btn-primary" })</div>
        <hr />
        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountHead)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountControlName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountHead)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountControlName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditAccountControl", new { id = item.AccountControlID}, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>